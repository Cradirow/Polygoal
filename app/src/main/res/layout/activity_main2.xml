<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <EditText
        android:id="@+id/titleEdit"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:hint="목표를 입력하세요"
        android:textSize="30dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/titleView"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:text="목표"
        android:textSize="30dp"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:background="#FFFFFF"
        android:text="건강"
        android:textSize="30dp"/>

    <noman.weekcalendar.WeekCalendar
        android:id="@+id/weekCalendar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:numOfPages="100"
        app:dayNameLength="threeLetters"
        app:selectedBgColor="#FFBC1D"
        app:weekBackgroundColor="#5F4300"
        app:todaysDateBgColor="#FEAC13"
        app:daysBackgroundColor="#FFEDC2"
        app:daysTextColor="#000000"
        app:daysTextSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>