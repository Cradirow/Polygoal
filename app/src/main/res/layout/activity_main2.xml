<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFBC1D"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"/>

    <Button
        android:id="@+id/titleEditBtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:hint="목표를 입력하세요"
        android:textSize="30dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/titleView"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:textSize="30dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnPolygonPhysical"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        android:background="@drawable/button_background"
        android:text="건강"
        android:textSize="20dp"
        android:onClick="mOnClick"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnPolygonWork"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.05"
        android:background="@drawable/button_background"
        android:text="일"
        android:textSize="20dp"
        android:onClick="mOnClick"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnPolygonSocial"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.9"
        android:background="@drawable/button_background"
        android:text="사람"
        android:textSize="20dp"
        android:onClick="mOnClick"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnPolygonPlay"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/button_background"
        android:text="놀이"
        android:textSize="20dp"
        android:onClick="mOnClick"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnPolygonActivity"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.75"
        android:background="@drawable/button_background"
        android:text="취미"
        android:textSize="20dp"
        android:onClick="mOnClick"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btnPolygonMyself"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/button_background"
        android:text="자신"
        android:textSize="20dp"
        android:onClick="mOnClick"
        android:visibility="invisible"/>
    
    <com.android.yunbumhan.polygoal.Polygon
        android:id="@+id/polygon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.7"/>

    <noman.weekcalendar.WeekCalendar
        android:id="@+id/weekCalendar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:numOfPages="100"
        app:dayNameLength="threeLetters"
        app:selectedBgColor="#FFBC1D"
        app:weekBackgroundColor="#5F4300"
        app:todaysDateBgColor="#FEAC13"
        app:daysBackgroundColor="#FFEDC2"
        app:daysTextColor="#000000"
        app:daysTextSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>